<div class="min-h-screen">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <section class="mt-10">
      <header class="mb-6">
        <h2 class="text-xl font-semibold text-gray-900">Your Donation Requests</h2>
        <p class="mt-1 text-sm text-gray-500">Thank you SO much for your help! Please update the status of your requests as you send emails</p>
      </header>
      <%= render "donation_requests" %>
    </section>

    <section class="mt-10">
      <header class="mb-6">
        <h2 class="text-xl font-semibold text-gray-900">Donations</h2>
        <p class="mt-1 text-sm text-gray-500">Once you mark a donation request as confirmed, it will show up here.</p>
      </header>
      <%= render "donations" %>
    </section>
  </div>
</div>