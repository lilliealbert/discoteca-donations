<div class="min-h-screen">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <nav class="mb-8">
      <%= link_to volunteers_path, class: "inline-flex items-center gap-2 text-sm font-medium text-gray-500 hover:text-gray-700 transition-colors" do %>
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
        Back to volunteers
      <% end %>
    </nav>

    <details class="group overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm">
      <summary class="flex cursor-pointer items-center justify-between border-b border-gray-200 bg-gray-50/75 px-6 py-8 group-open:border-b group-[&:not([open])]:border-b-0">
        <div>
          <h1 class="text-2xl font-bold tracking-tight text-gray-900"><%= @volunteer.name.presence || "Volunteer" %></h1>
          <p class="mt-2 text-base text-gray-600"><%= @volunteer&.email %></p>
        </div>
        <svg class="h-5 w-5 text-gray-500 transition-transform group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
        </svg>
      </summary>

      <dl class="divide-y divide-gray-100">
        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Name</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @volunteer.name.presence || "Not set" %></dd>
        </div>
        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Email</dt>
          <dd class="mt-1 text-sm sm:col-span-2 sm:mt-0">
            <%= link_to @volunteer&.email, "mailto:#{@volunteer&.email}", class: "text-indigo-600 hover:text-indigo-500" %>
          </dd>
        </div>
        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Member since</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @volunteer.created_at.strftime("%B %d, %Y") %></dd>
        </div>
      </dl>
    </details>

    <section class="mt-10">
      <header class="mb-6">
        <h2 class="text-xl font-semibold text-gray-900">Donation Requests</h2>
        <p class="mt-1 text-sm text-gray-500">All donation requests assigned to this volunteer</p>
      </header>

      <div class="overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm">
        <table class="min-w-full">
          <thead>
            <tr class="border-b border-gray-200 bg-gray-50/75">
              <th scope="col" class="py-4 pl-6 pr-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">
                Donor
              </th>
              <th scope="col" class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">
                Event
              </th>
              <th scope="col" class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">
                Status
              </th>
              <th scope="col" class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">
                Notes
              </th>
              <th scope="col" class="relative py-4 pl-3 pr-6">
                <span class="sr-only">View</span>
              </th>
            </tr>
          </thead>
          <tbody>
            <% if @donation_requests.any? %>
              <% @donation_requests.each_with_index do |request, index| %>
                <tr class="<%= 'border-t border-gray-100' unless index.zero? %> hover:bg-gray-50/50 transition-colors">
                  <td class="py-5 pl-6 pr-3">
                    <%= link_to donor_path(request.donor), class: "text-sm font-medium text-gray-900 hover:text-indigo-600" do %>
                      <%= request.donor.name %>
                    <% end %>
                  </td>
                  <td class="px-6 py-5">
                    <%= link_to event_path(request.event), class: "text-sm text-indigo-600 hover:text-indigo-500" do %>
                      <%= request.event.name %>
                    <% end %>
                  </td>
                  <td class="px-6 py-5">
                    <% status_classes = case request.request_status
                       when 'unasked' then 'bg-gray-50 text-gray-600 ring-gray-500/10'
                       when 'asked_once' then 'bg-blue-50 text-blue-700 ring-blue-600/20'
                       when 'asked_twice' then 'bg-yellow-50 text-yellow-700 ring-yellow-600/20'
                       when 'asked_thrice' then 'bg-orange-50 text-orange-700 ring-orange-600/20'
                       when 'no' then 'bg-red-50 text-red-700 ring-red-600/20'
                       when 'yes' then 'bg-green-50 text-green-700 ring-green-600/20'
                       else 'bg-gray-50 text-gray-600 ring-gray-500/10'
                       end %>
                    <% status_label = request.request_status&.humanize || 'Unknown' %>
                    <span class="inline-flex items-center rounded-full px-2 py-1 text-xs font-medium ring-1 ring-inset <%= status_classes %>">
                      <%= status_label %>
                    </span>
                  </td>
                  <td class="px-6 py-5">
                    <span class="text-sm text-gray-500 truncate max-w-xs block"><%= request.notes.presence || 'â€”' %></span>
                  </td>
                  <td class="py-5 pr-6 text-right">
                    <%= link_to donation_request_path(request), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" do %>
                      View<span class="sr-only">, <%= request.donor.name %></span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="5" class="px-6 py-16 text-center">
                  <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 11.25v8.25a1.5 1.5 0 01-1.5 1.5H5.25a1.5 1.5 0 01-1.5-1.5v-8.25M12 4.875A2.625 2.625 0 109.375 7.5H12m0-2.625V7.5m0-2.625A2.625 2.625 0 1114.625 7.5H12m0 0V21m-8.625-9.75h18c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125h-18c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
                  </svg>
                  <h3 class="mt-4 text-sm font-semibold text-gray-900">No donation requests</h3>
                  <p class="mt-1 text-sm text-gray-500">This volunteer has no assigned donation requests.</p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </section>

    <section class="mt-10">
      <header class="mb-6">
        <h2 class="text-xl font-semibold text-gray-900">Donations</h2>
        <p class="mt-1 text-sm text-gray-500">Donations associated with this volunteer</p>
      </header>

      <div class="overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm">
        <table class="min-w-full">
          <thead>
            <tr class="border-b border-gray-200 bg-gray-50/75">
              <th scope="col" class="py-4 pl-6 pr-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">
                Description
              </th>
              <th scope="col" class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">
                Donor
              </th>
              <th scope="col" class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">
                Event
              </th>
              <th scope="col" class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">
                Type
              </th>
              <th scope="col" class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">
                In Hand
              </th>
              <th scope="col" class="relative py-4 pl-3 pr-6">
                <span class="sr-only">View</span>
              </th>
            </tr>
          </thead>
          <tbody>
            <% if @donations.any? %>
              <% @donations.each_with_index do |donation, index| %>
                <tr class="<%= 'border-t border-gray-100' unless index.zero? %> hover:bg-gray-50/50 transition-colors">
                  <td class="py-5 pl-6 pr-3">
                    <%= link_to donation_path(donation), class: "text-sm font-medium text-gray-900 hover:text-indigo-600" do %>
                      <%= donation.short_description.presence || "No description" %>
                    <% end %>
                  </td>
                  <td class="px-6 py-5">
                    <%= link_to donor_path(donation.donor), class: "text-sm text-indigo-600 hover:text-indigo-500" do %>
                      <%= donation.donor.name %>
                    <% end %>
                  </td>
                  <td class="px-6 py-5">
                    <%= link_to event_path(donation.event), class: "text-sm text-indigo-600 hover:text-indigo-500" do %>
                      <%= donation.event.name %>
                    <% end %>
                  </td>
                  <td class="px-6 py-5">
                    <% type_classes = case donation.donation_type
                       when 'physical' then 'bg-blue-50 text-blue-700 ring-blue-600/20'
                       when 'digital' then 'bg-purple-50 text-purple-700 ring-purple-600/20'
                       when 'other' then 'bg-gray-50 text-gray-600 ring-gray-500/10'
                       else 'bg-gray-50 text-gray-600 ring-gray-500/10'
                       end %>
                    <span class="inline-flex items-center rounded-full px-2 py-1 text-xs font-medium ring-1 ring-inset <%= type_classes %>">
                      <%= donation.donation_type&.humanize || 'Unknown' %>
                    </span>
                  </td>
                  <td class="px-6 py-5">
                    <% if donation.in_hand %>
                      <span class="inline-flex items-center gap-1 text-sm text-green-600">
                        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
                        </svg>
                        Yes
                      </span>
                    <% else %>
                      <span class="text-sm text-gray-400">No</span>
                    <% end %>
                  </td>
                  <td class="py-5 pr-6 text-right">
                    <%= link_to donation_path(donation), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" do %>
                      View<span class="sr-only">, <%= donation.short_description %></span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="6" class="px-6 py-16 text-center">
                  <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 11.25v8.25a1.5 1.5 0 01-1.5 1.5H5.25a1.5 1.5 0 01-1.5-1.5v-8.25M12 4.875A2.625 2.625 0 109.375 7.5H12m0-2.625V7.5m0-2.625A2.625 2.625 0 1114.625 7.5H12m0 0V21m-8.625-9.75h18c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125h-18c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
                  </svg>
                  <h3 class="mt-4 text-sm font-semibold text-gray-900">No donations</h3>
                  <p class="mt-1 text-sm text-gray-500">This volunteer has no associated donations.</p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </section>
  </div>
</div>