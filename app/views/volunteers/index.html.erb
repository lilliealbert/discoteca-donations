<div class="min-h-screen">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <header class="mb-8 sm:flex sm:items-center sm:justify-between">
      <div>
        <h1 class="text-3xl font-bold tracking-tight text-gray-900">Volunteers</h1>
        <p class="mt-2 text-base text-gray-600">A list of all volunteers in your organization</p>
      </div>
      <nav class="mt-4 sm:mt-0">
        <%= link_to events_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" do %>
          View events &rarr;
        <% end %>
      </nav>
    </header>

    <div class="overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm">
      <table class="min-w-full">
        <thead>
          <tr class="border-b border-gray-200 bg-gray-50/75">
            <th scope="col" class="py-4 pl-6 pr-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">
              Name
            </th>
            <th scope="col" class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">
              Email
            </th>
            <th scope="col" class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">
              Requests
            </th>
            <th scope="col" class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">
              Donations
            </th>
            <th scope="col" class="relative py-4 pl-3 pr-6">
              <span class="sr-only">View</span>
            </th>
          </tr>
        </thead>
        <tbody>
          <% if @volunteers.any? %>
            <% @volunteers.each_with_index do |volunteer, index| %>
              <tr class="<%= 'border-t border-gray-100' unless index.zero? %> hover:bg-gray-50/50 transition-colors">
                <td class="py-5 pl-6 pr-3">
                  <%= link_to volunteer_path(volunteer), class: "text-sm font-medium text-gray-900 hover:text-indigo-600" do %>
                    <%= volunteer.name.presence || "No name" %>
                  <% end %>
                </td>
                <td class="px-6 py-5">
                  <%= link_to volunteer&.email, "mailto:#{volunteer&.email}", class: "text-sm text-indigo-600 hover:text-indigo-500" %>
                </td>
                <td class="px-6 py-5">
                  <span class="text-sm text-gray-600"><%= volunteer.donation_requests.count %></span>
                </td>
                <td class="px-6 py-5">
                  <span class="text-sm text-gray-600"><%= volunteer.donations.count %></span>
                </td>
                <td class="py-5 pr-6 text-right">
                  <%= link_to volunteer_path(volunteer), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" do %>
                    View<span class="sr-only">, <%= volunteer.name.presence || volunteer&.email %></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="5" class="px-6 py-16 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
                </svg>
                <h3 class="mt-4 text-sm font-semibold text-gray-900">No volunteers</h3>
                <p class="mt-1 text-sm text-gray-500">Get started by adding a new volunteer.</p>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>