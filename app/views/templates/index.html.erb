<script>
  function copyRichText(elementId) {
    const element = document.getElementById(elementId);
    const htmlContent = element.innerHTML;
    const textContent = element.innerText;

    const clipboardItem = new ClipboardItem({
      'text/html': new Blob([htmlContent], { type: 'text/html' }),
      'text/plain': new Blob([textContent], { type: 'text/plain' })
    });

    navigator.clipboard.write([clipboardItem]);
  }
</script>

<div class="min-h-screen">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <header class="mb-8">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900">Templates</h1>
      <div class="mt-4 rounded-lg bg-blue-50 border border-blue-200 px-4 py-3">
        <p class="text-sm text-blue-800">Please add details! Your child's grade, your relationship to the business, their past donations, or ideas for what they might donate are all super helpful.</p>
      </div>
    </header>

    <div class="space-y-8">
