<div class="min-h-screen">
  <div class="mx-auto max-w-3xl px-4 py-12 sm:px-6 lg:px-8">
    <nav class="mb-8">
      <%= link_to donor_path(@donor), class: "inline-flex items-center gap-2 text-sm font-medium text-gray-500 hover:text-gray-700 transition-colors" do %>
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
        Cancel
      <% end %>
    </nav>

    <article class="overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm">
      <header class="border-b border-gray-200 bg-gray-50/75 px-6 py-8">
        <h1 class="text-2xl font-bold tracking-tight text-gray-900">Edit Donor</h1>
        <p class="mt-2 text-base text-gray-600"><%= @donor.name %></p>
      </header>

      <%= form_with model: @donor, class: "divide-y divide-gray-100" do |form| %>
        <% if @donor.errors.any? %>
          <div class="px-6 py-5">
            <div class="rounded-lg bg-red-50 p-4 border border-red-200">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@donor.errors.count, "error") %> prohibited this donor from being saved:
              </h3>
              <ul class="mt-2 list-disc list-inside text-sm text-red-700">
                <% @donor.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:items-center">
          <%= form.label :name, class: "text-sm font-medium text-gray-500" %>
          <div class="mt-1 sm:col-span-2 sm:mt-0">
            <%= form.text_field :name,
                class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm px-3 py-2",
                required: true %>
          </div>
        </div>

        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:items-center">
          <%= form.label :donor_type, "Type", class: "text-sm font-medium text-gray-500" %>
          <div class="mt-1 sm:col-span-2 sm:mt-0">
            <%= form.select :donor_type,
                Donor.donor_types.map { |key, value| [value, key] },
                { include_blank: "Select a type" },
                class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm px-3 py-2" %>
          </div>
        </div>

        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:items-center">
          <%= form.label :primary_contact, class: "text-sm font-medium text-gray-500" %>
          <div class="mt-1 sm:col-span-2 sm:mt-0">
            <%= form.text_field :primary_contact,
                class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm px-3 py-2",
                placeholder: "Contact name" %>
          </div>
        </div>

        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:items-center">
          <%= form.label :email_address, class: "text-sm font-medium text-gray-500" %>
          <div class="mt-1 sm:col-span-2 sm:mt-0">
            <%= form.email_field :email_address,
                class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm px-3 py-2",
                placeholder: "email@example.com" %>
          </div>
        </div>

        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:items-center">
          <%= form.label :phone_number, class: "text-sm font-medium text-gray-500" %>
          <div class="mt-1 sm:col-span-2 sm:mt-0">
            <%= form.telephone_field :phone_number,
                class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm px-3 py-2",
                placeholder: "(555) 123-4567" %>
          </div>
        </div>

        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:items-center">
          <%= form.label :website, class: "text-sm font-medium text-gray-500" %>
          <div class="mt-1 sm:col-span-2 sm:mt-0">
            <%= form.url_field :website,
                class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm px-3 py-2",
                placeholder: "https://example.com" %>
          </div>
        </div>

        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:items-center">
          <%= form.label :relationship_to_teca, "Relationship to TECA", class: "text-sm font-medium text-gray-500" %>
          <div class="mt-1 sm:col-span-2 sm:mt-0">
            <%= form.text_field :relationship_to_teca,
                class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm px-3 py-2",
                placeholder: "e.g., Parent of student, Local business" %>
          </div>
        </div>

        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
          <%= form.label :notes, class: "text-sm font-medium text-gray-500" %>
          <div class="mt-1 sm:col-span-2 sm:mt-0">
            <%= form.text_area :notes,
                rows: 4,
                class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm",
                placeholder: "Add any notes about this donor..." %>
          </div>
        </div>

        <div class="px-6 py-5 flex items-center justify-end gap-3">
          <%= link_to "Cancel", donor_path(@donor), class: "rounded-lg px-4 py-2 text-sm font-semibold text-gray-700 hover:bg-gray-100 transition-colors" %>
          <%= form.submit "Save changes", class: "rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 transition-colors cursor-pointer" %>
        </div>
      <% end %>
    </article>
  </div>
</div>
