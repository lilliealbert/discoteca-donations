<div class="min-h-screen">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <nav class="mb-8">
      <%= link_to donors_path, class: "inline-flex items-center gap-2 text-sm font-medium text-gray-500 hover:text-gray-700 transition-colors" do %>
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
        Back to donors
      <% end %>
    </nav>

    <article class="overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm">
      <header class="border-b border-gray-200 bg-gray-50/75 px-6 py-8 flex items-start justify-between">
        <div>
          <h1 class="text-2xl font-bold tracking-tight text-gray-900"><%= @donor.name %></h1>
          <% if @donor.relationship_to_teca.present? %>
            <p class="mt-2 text-base text-gray-600"><%= @donor.relationship_to_teca %></p>
          <% end %>
        </div>
        <%= link_to edit_donor_path(@donor), class: "rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 transition-colors" do %>
          Edit
        <% end %>
      </header>

      <dl class="divide-y divide-gray-100">
        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Name</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @donor.name %></dd>
        </div>
        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Type</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= Donor.donor_types[@donor.donor_type] || "Not specified" %></dd>
        </div>
        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Email address</dt>
          <dd class="mt-1 text-sm sm:col-span-2 sm:mt-0">
            <% if @donor.email_address.present? %>
              <%= link_to @donor.email_address, "mailto:#{@donor.email_address}", class: "text-indigo-600 hover:text-indigo-500" %>
            <% else %>
              <span class="text-gray-400">Not provided</span>
            <% end %>
          </dd>
        </div>
        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Phone number</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <% if @donor.phone_number.present? %>
              <%= link_to @donor.phone_number, "tel:#{@donor.phone_number}", class: "text-indigo-600 hover:text-indigo-500" %>
            <% else %>
              <span class="text-gray-400">Not provided</span>
            <% end %>
          </dd>
        </div>
        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Website</dt>
          <dd class="mt-1 text-sm sm:col-span-2 sm:mt-0">
            <% if @donor.website.present? %>
              <%= link_to @donor.website, @donor.website, target: "_blank", rel: "noopener noreferrer", class: "text-indigo-600 hover:text-indigo-500" %>
            <% else %>
              <span class="text-gray-400">Not provided</span>
            <% end %>
          </dd>
        </div>
        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Relationship to TECA</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @donor.relationship_to_teca.presence || "Not specified" %></dd>
        </div>
        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Notes</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0 whitespace-pre-wrap"><%= @donor.notes.presence || "No notes" %></dd>
        </div>
        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Added</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @donor.created_at.strftime("%B %d, %Y at %l:%M %p") %></dd>
        </div>
      </dl>
    </article>

    <section class="mt-10">
      <header class="mb-6">
        <h2 class="text-xl font-semibold text-gray-900">Donation Requests</h2>
        <p class="mt-1 text-sm text-gray-500">All donation requests we've made of this donor</p>
      </header>

      <div class="overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm">
        <table class="min-w-full">
          <thead>
            <tr class="border-b border-gray-200 bg-gray-50/75">
              <th scope="col" class="py-4 pl-6 pr-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">
                Event
              </th>
              <th scope="col" class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">
                Volunteer
              </th>
              <th scope="col" class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">
                Status
              </th>
              <th scope="col" class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">
                Notes
              </th>
              <th scope="col" class="relative py-4 pl-3 pr-6">
                <span class="sr-only">View</span>
              </th>
            </tr>
          </thead>
          <tbody>
            <% if @donation_requests.any? %>
              <% @donation_requests.each_with_index do |request, index| %>
                <tr class="<%= 'border-t border-gray-100' unless index.zero? %> hover:bg-gray-50/50 transition-colors">
                  <td class="py-5 pl-6 pr-3">
                    <%= link_to event_path(request.event), class: "text-sm font-medium text-gray-900 hover:text-indigo-600" do %>
                      <%= request.event.name %>
                    <% end %>
                  </td>
                  <td class="px-6 py-5">
                    <span class="text-sm text-gray-600"><%= request.volunteer&.email %></span>
                  </td>
                  <td class="px-6 py-5">
                    <% status_classes = case request.request_status
                       when 'unasked' then 'bg-gray-50 text-gray-600 ring-gray-500/10'
                       when 'asked_once' then 'bg-blue-50 text-blue-700 ring-blue-600/20'
                       when 'asked_twice' then 'bg-yellow-50 text-yellow-700 ring-yellow-600/20'
                       when 'asked_thrice' then 'bg-orange-50 text-orange-700 ring-orange-600/20'
                       when 'no' then 'bg-red-50 text-red-700 ring-red-600/20'
                       when 'yes' then 'bg-green-50 text-green-700 ring-green-600/20'
                       else 'bg-gray-50 text-gray-600 ring-gray-500/10'
                       end %>
                    <% status_label = request.request_status&.humanize || 'Unknown' %>
                    <span class="inline-flex items-center rounded-full px-2 py-1 text-xs font-medium ring-1 ring-inset <%= status_classes %>">
                      <%= status_label %>
                    </span>
                  </td>
                  <td class="px-6 py-5">
                    <span class="text-sm text-gray-500 truncate max-w-xs block"><%= request.notes.presence || 'â€”' %></span>
                  </td>
                  <td class="py-5 pr-6 text-right">
                    <%= link_to donation_request_path(request), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" do %>
                      View<span class="sr-only">, <%= request.event.name %></span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="5" class="px-6 py-16 text-center">
                  <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 11.25v8.25a1.5 1.5 0 01-1.5 1.5H5.25a1.5 1.5 0 01-1.5-1.5v-8.25M12 4.875A2.625 2.625 0 109.375 7.5H12m0-2.625V7.5m0-2.625A2.625 2.625 0 1114.625 7.5H12m0 0V21m-8.625-9.75h18c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125h-18c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
                  </svg>
                  <h3 class="mt-4 text-sm font-semibold text-gray-900">No donation requests</h3>
                  <p class="mt-1 text-sm text-gray-500">No donation requests have been created for this donor yet.</p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </section>
  </div>
</div>