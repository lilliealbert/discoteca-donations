<div class="min-h-screen">
  <div class="mx-auto max-w-3xl px-4 py-12 sm:px-6 lg:px-8">
    <nav class="mb-8">
      <%= link_to donors_path, class: "inline-flex items-center gap-2 text-sm font-medium text-gray-500 hover:text-gray-700 transition-colors" do %>
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
        Back to donors
      <% end %>
    </nav>

    <article class="overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm">
      <header class="border-b border-gray-200 bg-gray-50/75 px-6 py-8">
        <h1 class="text-2xl font-bold tracking-tight text-gray-900"><%= @donor.name %></h1>
        <% if @donor.relationship_to_teca.present? %>
          <p class="mt-2 text-base text-gray-600"><%= @donor.relationship_to_teca %></p>
        <% end %>
      </header>

      <dl class="divide-y divide-gray-100">
        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Name</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @donor.name %></dd>
        </div>
        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Email address</dt>
          <dd class="mt-1 text-sm sm:col-span-2 sm:mt-0">
            <% if @donor.email_address.present? %>
              <%= link_to @donor.email_address, "mailto:#{@donor.email_address}", class: "text-indigo-600 hover:text-indigo-500" %>
            <% else %>
              <span class="text-gray-400">Not provided</span>
            <% end %>
          </dd>
        </div>
        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Phone number</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <% if @donor.phone_number.present? %>
              <%= link_to @donor.phone_number, "tel:#{@donor.phone_number}", class: "text-indigo-600 hover:text-indigo-500" %>
            <% else %>
              <span class="text-gray-400">Not provided</span>
            <% end %>
          </dd>
        </div>
        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Website</dt>
          <dd class="mt-1 text-sm sm:col-span-2 sm:mt-0">
            <% if @donor.website.present? %>
              <%= link_to @donor.website, @donor.website, target: "_blank", rel: "noopener noreferrer", class: "text-indigo-600 hover:text-indigo-500" %>
            <% else %>
              <span class="text-gray-400">Not provided</span>
            <% end %>
          </dd>
        </div>
        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Relationship to TECA</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @donor.relationship_to_teca.presence || "Not specified" %></dd>
        </div>
        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Notes</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0 whitespace-pre-wrap"><%= @donor.notes.presence || "No notes" %></dd>
        </div>
        <div class="px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">Added</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @donor.created_at.strftime("%B %d, %Y at %l:%M %p") %></dd>
        </div>
      </dl>
    </article>
  </div>
</div>