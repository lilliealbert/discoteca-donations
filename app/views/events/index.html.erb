<div class="min-h-screen">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <header class="mb-8 sm:flex sm:items-center sm:justify-between">
      <div>
        <h1 class="text-3xl font-bold tracking-tight text-gray-900">Events</h1>
        <p class="mt-2 text-base text-gray-600">A list of all events in your account</p>
      </div>
      <nav class="mt-4 sm:mt-0">
        <%= link_to donors_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" do %>
          View donors &rarr;
        <% end %>
      </nav>
    </header>

    <div class="overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm">
      <table class="min-w-full">
        <thead>
          <tr class="border-b border-gray-200 bg-gray-50/75">
            <th scope="col" class="py-4 pl-6 pr-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">
              Name
            </th>
            <th scope="col" class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">
              Date
            </th>
            <th scope="col" class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">
              Created
            </th>
            <th scope="col" class="relative py-4 pl-3 pr-6">
              <span class="sr-only">View</span>
            </th>
          </tr>
        </thead>
        <tbody>
          <% if @events.any? %>
            <% @events.each_with_index do |event, index| %>
              <tr class="<%= 'border-t border-gray-100' unless index.zero? %> hover:bg-gray-50/50 transition-colors group">
                <td class="py-5 pl-6 pr-3">
                  <%= link_to event_path(event), class: "text-sm font-medium text-gray-900 hover:text-indigo-600" do %>
                    <%= event.name %>
                  <% end %>
                </td>
                <td class="px-6 py-5">
                  <span class="text-sm text-gray-600"><%= event.date&.strftime("%B %d, %Y") || "â€”" %></span>
                </td>
                <td class="px-6 py-5">
                  <span class="text-sm text-gray-500"><%= event.created_at.strftime("%b %d, %Y") %></span>
                </td>
                <td class="py-5 pr-6 text-right">
                  <%= link_to event_path(event), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" do %>
                    View<span class="sr-only">, <%= event.name %></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="4" class="px-6 py-16 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
                </svg>
                <h3 class="mt-4 text-sm font-semibold text-gray-900">No events</h3>
                <p class="mt-1 text-sm text-gray-500">Get started by creating a new event.</p>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
